@model Employee

<form asp-action="Create" asp-controller="Employee" method="post">
    <div asp-validation-summary="All"></div>

    <div>
        <label asp-for="Name"></label>
        <div>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <input class="form-control" type="text" asp-for="Name" />
    </div>

    <div>
        <label asp-for="Surname"></label>
        <div>
            <span asp-validation-for="Surname" class="text-danger"></span>
        </div>
        <input class="form-control" type="text" asp-for="Surname" />
    </div>

    <div>
        <label asp-for="Pesel"></label>
        <div>
            <span asp-validation-for="Pesel" class="text-danger"></span>
        </div>
        <input class="form-control" type="text" asp-for="Pesel" />
    </div>


        <div>
        <label asp-for="Position"></label>
        <div>
            <span asp-validation-for="Position" class="text-danger"></span>
        </div>
        <select class="form-control" asp-for="Position" asp-items="@Html.GetEnumSelectList<Position>()"></select>
    </div>


    <div>
        <label asp-for="Department"></label>
        <div>
            <span asp-validation-for="Department" class="text-danger"></span>
        </div>
        <input class="form-control" type="text" asp-for="Department" />
    </div>


    <div>
        <label asp-for="HireDate"></label>
        <div>
            <span asp-validation-for="HireDate" class="text-danger"></span>
        </div>
        <input class="form-control" asp-for="HireDate" />
    </div>


    <div>
        <label asp-for="ReleaseDate"></label>
        <div>
            <span asp-validation-for="ReleaseDate" class="text-danger"></span>
        </div>
        <input class="form-control" asp-for="ReleaseDate" />
    </div>

    <button type="submit">Zapisz</button>

</form>