@model List<Employee>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<h2>Lista pracowników</h2>
<a asp-action="Create">Dodaj pracownika</a>
<table width="100%">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model[0].Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model[0].Surname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model[0].Pesel)
        </th>
        <th>
            @Html.DisplayNameFor(model => model[0].Position)
        </th>
        <th>
            @Html.DisplayNameFor(model => model[0].Department)
        </th>
        <th>
            @Html.DisplayNameFor(model => model[0].HireDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model[0].ReleaseDate)
        </th>
        <th>
            Akcje
        </th>
    </tr>
    @foreach (var item in @Model)
    {
        <tr>
            <td>
                @item.Name
            </td>
            <td>
                @item.Surname
            </td>
            <td>
                @item.Pesel
            </td>
            <td>
                @item.Position
            </td>
            <td>
                @item.Department
            </td>
            <td>
                @item.HireDate
            </td>
            <td>
                @item.ReleaseDate
            </td>
            <td>
                <a class="btn btn-primary"
               asp-action="Edit"
               asp-controller="Employee"
               asp-route-id=@item.Id>Edytuj</a>
                <a class="btn btn-primary"
               asp-action="Details"
               asp-controller="Employee"
               asp-route-id=@item.Id>Szczegóły</a>
                <a class="btn btn-primary"
               asp-action="Delete"
               asp-controller="Employee"
               asp-route-id=@item.Id>Usuń</a>
            </td>
        </tr>
    }
</table>